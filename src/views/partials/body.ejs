<div style="text-align: center;" class="jumbotron">
    <h1 style="color : red ; font-size : xxx-large">Report Covid-19 cases</h1>
    <a href="https://www.worldometers.info/coronavirus/"><h1   style="color :black ; font-size : large">click for more information</h1></a>
</div>

<div class="container">
    <table class="table table-striped table-bordered ">
        <thead class="thead-dark">
            <tr style="color:red; font-size: large;">
                <th scope = "col">Country</th>
                <th scope = "col">Province</th>
                <th scope = "col">Population</th>
                <th scope = "col">Confirmed Cases</th>
                <th scope = "col">Deaths</th>
                <th scope = "col">Recovered</th>
            </tr>
        </thead>
        <tr>
            <td> World </td>
            <td> ---</td>
            <td> --- </td>
            <td> <%= data.latest.confirmed %> </td>
            <td> <%= data.latest.deaths %> </td>
            <td> <%= data.latest.recovered %> </td>
        </tr>

        <% for (let i = 0; i < data.locations.length; i++) { %>
        <tr >
            <td> <%= data.locations[i].country %> </td>
            <% if(data.locations[i].province.length > 0){ %>
                <td> <%= data.locations[i].province %> </td>
            <% } else{ %>  
                <td> --- </td>
            <% } %>
            <td> <%= data.locations[i].country_population %> </td>
            <td> <%= data.locations[i].latest.confirmed %> </td>
            <td style="background-color: red; color: white;"> <%= data.locations[i].latest.deaths %> </td>
            <td style="color: black ; background-color:tan"> <%= data.locations[i].latest.recovered %> </td>
        </tr>
        <% } %>
    </table>
</div>
</body>